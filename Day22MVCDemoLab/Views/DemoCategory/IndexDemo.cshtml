@model List<Day22MVCDemoLab.Models.Category>

<h1 style="color:blue;">@ViewData["AppName"]</h1>

<h2>ViewData: @((int)ViewData["Number1"]+ (int) ViewData["Number2"])</h2>
<h2>ViewBag : @(ViewBag.N1 + ViewBag.N2)</h2>
<h2>Welcome In Index Demo View</h2>

<p>For Calling ControllerName/ActionMethod</p>
<h4>Html Element</h4>
<a href="/DemoCategory/Create" class="btn btn-primary">Create</a>

<hr />
<h4>Html Helper Razor Engine @@ :</h4>
@Html.ActionLink("Create By Action Link", "Create", "DemoCategory", null, null, null, null, new { @class = "btn btn-primary" })

<hr />
<h4>Tag Helper asp- :</h4> 
<a asp-action="Create" asp-controller="DemoCategory" class="btn btn-primary">Create</a>
<br />
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(m => m.First().CategoryId)</th>  @* here we use html Helper that generate the column name and use first Method to get the first item from the list *@
        <th>@Html.DisplayNameFor(m => m.First().Name)</th>
        <th>@Html.DisplayNameFor(m => m.First().Description)</th>
    </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CategoryId)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                @* BY HTML Helper *@
                <td>@Html.ActionLink("Edit" , "Edit" , new {id = item.CategoryId})</td>
                <td>@Html.ActionLink("Details", "Details", new {id = item.CategoryId })</td>
                <td>@Html.ActionLink("Delete", "Delete", new {id = item.CategoryId })</td>
                @* BY Tag Helper asp- *@
                <td><a asp-action="Edit" asp-controller="DemoCategory" asp-route-id="@item.CategoryId" class="btn btn-secondary">Edit</a> </td>
                <td><a asp-action="Details" asp-controller="DemoCategory" asp-route-id="@item.CategoryId" class="btn btn-info">Details</a></td>
                <td><a asp-action="Delete" asp-controller="DemoCategory" asp-route-id="@item.CategoryId" class="btn btn-danger">Delete</a></td>
            </tr>
        }
</table>